<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- mapper namespace 비워두면 에러남 -->
<!-- crud 방식 -->
<!-- namespace의 value 중복 X -->
<!-- 해당 mapper를 사용할 DAO에 pull_pakgename 으로 작성 -->
<mapper namespace="com.winter.app.regions.RegionDAO">
	<!-- detail 쿼리문 -->
	<!-- region_id ?값을 가져오기위해 parameterType 선언 -->
	<!-- 어떤값으로 리턴보낼지 resultType -->
	<!-- ID는 DAO의 메서드명 -->
	<select id="getDetail" resultType="com.winter.app.regions.RegionDTO" parameterType="com.winter.app.regions.RegionDTO">
		select * from regions where region_id=#{region_id}
	</select>
	
	<!-- list -->
	<select id="getList" resultType="com.winter.app.regions.RegionDTO">
	select * from regions
	</select>
</mapper>